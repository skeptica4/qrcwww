local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local LocalPlayer = Players.LocalPlayer

local ALLOWED_GUNS = {
	"Akimbo", "Voltaic Impact", "Gunslingers", "Burst Rifle", "Stonewall",
	"Steelforge", "DMR", "Gift of Fire", "Armour Peeler", "Medical Bow",
	"Recurve", "Vitabow", "Rifle", "Bolter", "Harpoon Gun", "RPG",
	"Rocket Stormer", "Shockwave Device", "Shotgun", "Hallsweeper",
	"Sprinter's Streak", "SMG", "Loose Trigger", "Twinface",
	"Mastermind's Rifle", "Shovel", "Overcharger", "Rallying Cry",
	"Machete", "Handaxes", "Torqueblade"
}
local modifiedGuns = {}

local function modify(tool)
	if not tool or modifiedGuns[tool] or not table.find(ALLOWED_GUNS, tool.Name) then return end
	
	modifiedGuns[tool] = true
	tool:SetAttribute("Firerate", 500)
	tool:SetAttribute("BulletSpeed", 9999)
	tool:SetAttribute("Spread", 0)
	tool:SetAttribute("ReloadTime", 0.1)
	
	tool:GetAttributeChangedSignal("Ammo"):Connect(function()
		pcall(tool.SetAttribute, tool, "Ammo", 999)
	end)
	tool:SetAttribute("Ammo", 999)
end

RunService.Heartbeat:Connect(function()
	local char = LocalPlayer.Character
	if char then
		modify(char:FindFirstChildOfClass("Tool"))
	end
end)
